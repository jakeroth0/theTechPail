<div class="h-screen purplegradient">
<div>
  <h1 class="font-extrabold text-6xl text-[#AAA5D2] fontborder leading-none pt-8 pl-9 md:text-9xl xl:pl-[20%]">edit post</h1>
  <h2 class="font-normal text-xl leading-none md:leading-8 pt-2 pl-9 md:text-4xl md:pt-4 xl:pl-[20%]">Third time's the charm.</h2>

  <form class="editpost flex flex-col pl-9 pt-8 xl:pl-[20%]">

    <div class="pt-2 md:pt-6">
      <div class="hidden" id="post_id">{{post.id}}</div>
      <label class="font-normal text-lg md:text-5xl md:pb-4 md:pt-6 md:mb-1" for="post_title">title</label>
      <br />
      <input
        type="text"
        class="form-input w-10/12 md:h-14 md:w-11/12 md:text-xl md:pl-2 xl:w-10/12"
        id="post_title"
        value="{{post.post_title}}"
      />
    </div>

    <div class="pt-2 flex flex-col h-auto">
      <label class="font-normal text-lg mb-1 md:text-5xl md:pb-1 md:pt-4" for="post_text">content</label>
      <textarea
        type="text"
        class="form-input w-10/12 h-32 resize-none md:h-64 md:w-11/12 md:text-xl md:pl-2 xl:w-10/12"
        id="post_text"
      >{{post.post_text}}</textarea>
    </div>

    <p class="font-normal text-sm text-[#3E4F53] pt-2 pr-20 md:text-lg">{{dateFormat post.post_date}}.</p>

    <div class="form-group flex pt-2 md:pt-8">

      <div class="bg-[#61558A] flex pr-1 pb-1 mr-4 w-1/3 md:h-14 md:w-1/5 md:pr-2 md:pb-2 xl:w-[180px]">
      <button class="btn btn-primary flex font-medium text-lg text-left bg-[#E7D7E7] text-black py-[.075rem] pl-3 w-full md:pl-5 md:text-4xl"
        type="update" id="updateBtn"
      >update</button>
      </div>

      <div class="bg-[#61558A] flex pr-1 pb-1 mr-4 w-1/3 md:h-14 md:w-1/5 md:pr-2 md:pb-2 xl:w-[180px]">
      <button class="btn btn-primary flex font-medium text-lg text-left bg-[#E7D7E7] text-black py-[.075rem] pl-3 w-full md:pl-5 md:text-4xl"
        type="delete" id="deleteBtn"
      >delete</button>
      </div>
    </div>

    

  </form>
</div>
{{#each post.comments}}
  <div
    id="comment-container">
    <h3>{{this.user.username}}</h3>
    <p>{{this.comment_text}}</p>
    <p>- {{this.comment_date}}</p>
  </div>
{{/each}}

<div class="hidden xl:fixed xl:flex xl:flex-col xl:bg-white z-20 top-0 right-0 h-screen w-[80px]">
    <div class=" md:bg-white flex justify-center items-center grow border-l-2 border-b-2 border-black">
      <div class="transform -rotate-90">
        <p class="text-xl">Progress</p>
      </div>
    </div>
    <div class="md:bg-[#BEB6D9] flex justify-center items-center h-[20%] border-l-2 border-black">
      <div class="transform -rotate-90">
        <a href="/" class="text-xl">Home</a>
      </div>
    </div>
  </div>


</div>

<script src="/js/editpost.js"></script>