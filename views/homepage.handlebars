<div
  id="home-container">
  <h1 class=" text-green-500 ">Welcome, {{currentuser}}!</h1>
  <p>Recent posts</p>
  {{#each posts as |post|}}
  <div>
    <a href="/api/posts/{{post.id}}">
      <div>
        <h2>{{post.post_title}}</h2>
      </div>
      <div>
        <h3>{{post.post_text}}</a></h3>
      </div>
    </a>
    </div>
  {{/each}}
</div>