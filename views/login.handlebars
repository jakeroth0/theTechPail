<div class="flex flex-col h-screen orangegradient">
  <h1
    class="font-extrabold text-6xl text-[#EEB171] fontborder leading-none pt-8 pl-9"
  >login</h1>
  <h2
    class="font-normal text-xl leading-none md:text-lg md:leading-8 pt-2 pl-9"
  >Welcome back, old friend.</h2>

  <div class="flex flex-col pl-9 pt-8">

    <form class="form login-form">
      <div class="form-group flex flex-col">
        <label class="font-medium text-xl" for="email-login">email</label>
        <input
          class="form-input w-7/12"
          type="text"
          placeholder="tater@gmail.com"
          id="user_email-login"
        />
      </div>

      <div class="form-group flex flex-col">
        <label class="font-medium text-xl" for="password-login">password</label>
        <input class="form-input w-7/12" type="password" id="password-login" />
      </div>

      <div class="form-group flex pt-4">
      <div class="bg-[#976634] flex pr-1 pb-1 mr-4 w-1/3">
        <button
          class="btn btn-primary flex font-medium text-lg text-left bg-[#F1C698] text-black py-[.075rem] pl-3 w-full"
        >login</button>
      </div>

      <div class=" flex pr-1 pb-1 w-1/3">
        <a href="/signup"
          class="btn btn-primary flex font-medium text-lg text-left text-[#785129] underline py-[.075rem] pl-3 w-full"
        >sign up</a>
      </div>
      
      </div>

    </form>
  </div>
</div>

<script src="/js/login.js"></script>